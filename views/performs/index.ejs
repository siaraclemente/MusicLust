<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>MusicLust</title>
</head>
<body>
  <h1>We're following Dashboard Confessional!</h1>
  <a href= "performs/new" >Add New Performance</a>
  <table>
      <thead>
          <tr>
              <th>Location</th>
              <th>Date</th>
              <th>Time</th>
          </tr>
      </thead>
      <tbody>
          <% if (performs.length > 0) { %>
          <% performs.forEach(function(p) { %>
              <tr>
                  <td><%= p.location %></td>
                  <td><%= p.date %></td>
                  <td><%= p.time %></td>
              </tr>
            <ul>
              <form id="add-comment-form" method="POST"
              action="/performs/comments">
              <label>Comment:</label>
              <textarea name="text"></textarea>
              <input type="submit" value="Post Comment">
            </form>
            <% }); %>
            <% performs.forEach(function(c) { %>
                <tr>
                  <td><%= c.text %></td> 
                 </tr>
                <% }); %> 
          <% } else { %>
         <h1> No Current Performances </h1>  
          <% } %>
        </ul>
      </tbody>
  </table>
  <section>
</section>
</body>
</html>
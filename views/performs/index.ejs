<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>MusicLust</title>
</head>
<body>
  <h1>We're following Dashboard Confessional!</h1>
  <a href= "performs/new" >Add New Performance</a>
  <table>
      <thead>
          <tr>
              <th>Location</th>
              <th>Date</th>
              <th>Time</th>
          </tr>
      </thead>
      <tbody>
          <% if (performs.length > 0) { %>
            <% performs.forEach(function(p) { %>
                <tr>
                    <td><%= p.location %></td>
                    <td><%= p.date %></td>
                    <td><%= p.time %></td>
                </tr>
                <tr>
                    <td>
                    <form action="/performs/<%= p._id %>?_method=DELETE" method="POST" class="secondary-content">
                    <button type="submit">Delete</button>
                    </form>
                    </td>
                </tr>
                <tr>
                    <form id="add-comment-form" method="POST"
                    action="/performs/<%= p._id %>/comments">
                    <td>
                    <label>Comment:</label>
                    </td>
                    <td><textarea name="text"></textarea>
                    </td>
                    <td><input type="submit" value="Post Comment">   
                    </td>
                    </form>
                </tr>
                <% p.comments.forEach(function(c, idx) { %>
                    <tr>
                    <td colspan="3"><%= c.text %></td>
                    </tr>
                <% }); %> 
            <% }); %>
        <% } else { %>
            <h1> No Current Performances </h1>  
        <% } %>
        
      </tbody>
  </table>
  <section>
</section>
</body>
</html>